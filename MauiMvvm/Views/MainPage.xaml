<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MauiMvvm.ViewModels"
             x:Class="MauiMvvm.Views.MainPage" 
             Title="Start">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Text="{Binding Item.Value}" FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Entry Completed="{Binding OnEntryCompleted}" IsPassword="True" Text="enter nickname" Grid.Row="1"/>
    </Grid>
</ContentPage>
